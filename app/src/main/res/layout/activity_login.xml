<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context="com.example.prueba.Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp">
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_avatar"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="40dp"
                    />


            </RelativeLayout>

        <!-- identificacion -->
            <LinearLayout
                android:id="@+id/identificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:paddingBottom="10dp">



                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/EditTextHint">

                    <EditText
                        android:id="@+id/edt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nombres"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:paddingLeft="20dp"
                        android:textSize="18dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:background="@null"
                        android:inputType="text"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
            <View
                android:id="@+id/separadorI"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/separador"
                android:layout_below="@id/identificacion"
                android:paddingBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

        <!-- nombres -->
            <LinearLayout
                android:id="@+id/nombres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:paddingBottom="10dp">



                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/EditTextHint">

                    <EditText
                        android:id="@+id/edt_surname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Apellidos"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:paddingLeft="20dp"
                        android:textSize="18dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:background="@null"
                        android:inputType="text"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
            <View
                android:id="@+id/separadorN"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/separador"
                android:layout_below="@id/nombres"
                android:paddingBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

        <!-- apellidos -->
            <LinearLayout
            android:id="@+id/apellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:paddingBottom="10dp">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextHint">

                <EditText
                    android:id="@+id/edt_identification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Identificacion"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:background="@null"
                    android:inputType="number"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
            <View
                android:id="@+id/separadorA"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/separador"
                android:layout_below="@id/apellidos"
                android:paddingBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

         <!-- movil -->
            <LinearLayout
            android:id="@+id/movil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:paddingBottom="10dp">



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextHint">

                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="MÃ³vil"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:background="@null"
                    android:inputType="number"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
            <View
                android:id="@+id/separadorM"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/separador"
                android:layout_below="@id/movil"
                android:paddingBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

        <!-- correo -->
            <LinearLayout
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:paddingBottom="10dp">



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextHint">

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:background="@null"
                    android:inputType="textEmailAddress"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
            <View
                android:id="@+id/separadorP"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/separador"
                android:layout_below="@id/email"
                android:paddingBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

        <!-- boton -->
            <LinearLayout
                android:id="@+id/registrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp">
                <Button
                    android:id="@+id/btn_registrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/btn_fondo_color"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="Registrar"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:elevation="5dp"
                    android:padding="15dp"/>

                <Button
                    android:id="@+id/btn_listar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/btn_fondo_color"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="Listar"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:elevation="5dp"
                    android:padding="15dp"/>


            </LinearLayout>






        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>